<body>
  
  <%- include ('partials/nav.ejs'); %>

    

  <div class="below">
    <div class="container">
    
        <form class="login" action="/api/usuario" method="POST">

            <div class="card">
                <div class="card-top">
                    <h3 class="tittle">INSCREVA-SE</h3>
                </div>

                <div class="card-group">
                    <label>Nome Completo</label>
                    <input type="text" name="name" id="nome" required>
                </div>

                <div class="card-group">
                    <label>Email</label>
                    <input type="email" name="email" id="email" required>
                </div>               

                <div class="card-group">
                    <label>Senha</label>
                    <input type="password" name="password" id="senha" required>
                </div>

                <div class="btn">
                    <button class="btn-login" type="submit">Inscrever-se</button>
                </div>

                <div class="forms">
                    <label>JÃ¡ possui uma conta?</label>
                    <a class="textoLoginParaCadastro" href="/login">Entrar!</a>
                </div>


            </div>
        </form>

    </div>

    

